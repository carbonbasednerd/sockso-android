<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <CheckBoxPreference
        android:defaultValue="false"
        android:key="login_required"
        android:summary="@string/prefs_login_required_summary"
        android:title="@string/prefs_login_required_title" />

    <EditTextPreference
        android:defaultValue=""
        android:key="username"
        android:summary="@string/prefs_username_summary"
        android:title="@string/prefs_username_title" />
    <EditTextPreference
        android:defaultValue=""
        android:key="password"
        android:summary="@string/prefs_password_summary"
        android:title="@string/prefs_password_title"
        android:password="true" />
    <EditTextPreference
        android:defaultValue=""
        android:key="server"
        android:summary="@string/prefs_server_summary"
        android:title="@string/prefs_server_title" />
    <EditTextPreference
        android:defaultValue="4444"
        android:key="port"
        android:summary="@string/prefs_port_summary"
        android:title="@string/prefs_port_title" />

</PreferenceScreen>